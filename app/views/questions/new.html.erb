<form class="create-question">
  <%= form_with(model: @question, local: true) do |form| %>
    <%= form.text_field :title, placeholder: "タイトル" %>
    <%= form.text_area :content, placeholder: "投稿内容" %>
    <%= form.text_field :user, placeholder: "投稿者名" %>
    <%= form.submit "POST" %>
  <% end %>
</form>